<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_welcom"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="编辑宠物信息"
        android:textColor="@color/red_common_pure"
        android:textSize="28sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edt_pet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="请输入宠物名称"
        android:textColorHint="@color/black"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/edt_pet_kind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="请输入宠物种类"
        android:textColorHint="@color/black"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/edt_pet_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="请输入宠物年龄"
        android:textColorHint="@color/black"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/edt_pet_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="请输入宠物体重"
        android:textColorHint="@color/black"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/icon_1154"
        android:text="确定"/>

</LinearLayout>