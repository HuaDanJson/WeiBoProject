<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/llMainActivitySend"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivSeeOthersLocationActivityBack"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:clickable="true"
                android:padding="16dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_back"/>

            <EditText
                android:id="@+id/edtSeeOthersLocationActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="90dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/search_bg"
                android:gravity="center"
                android:hint="请输微博标题"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:textColor="@color/yellow87"
                android:textColorHint="@color/yellow87"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvSeeOthersLocationActivityChaXun"
                android:layout_width="56dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="13dp"
                android:background="@color/yellow87"
                android:clickable="true"
                android:gravity="center"
                android:text="查询"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </RelativeLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llMainActivitySend"
        android:layout_marginTop="@dimen/dp10"/>

</RelativeLayout>
